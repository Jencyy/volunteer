<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Registration System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand ps-2 lead " href="/"> Volunteer Registration</a>
    </nav>    <a href="/addForm" class="btn btn-success  m-3">Register New Volunteer</a>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Registered Volunteers</h2>
                <table class="table table-hover mt-4">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Skills</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% volunteers.forEach(volunteer => { %>
                            <tr>
                                <td><%= volunteer.id %></td>
                                <td><%= volunteer.firstName %> <%= volunteer.lastName %></td>
                                <td><%= volunteer.email %></td>
                                <td><%= volunteer.phoneNumber %></td>
                                <td><%= volunteer.skills %></td>
                                <td>
                                    <a href="/editVolu/<%= volunteer.id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/deleteVolu/<%= volunteer.id %>" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            
            </div>
        </div>
    </div>
</body>
</html>
